<p id="notice"><%#= notice %></p>

<h1 class="text-center">Minhas Anotações</h1>
<%= simple_form_for :filter, method: :get do |f| %>
  <input type="submit" id="submit" class="d-none">
  <div class="card card-primary border-0" style="background-color: #00000000"> 
    <div class="card-body" style="background-color: #00000000">
      <div class="row">
        <div class="col-sm-6">
          <div class="input-group mb-3 w-100">
            <%#= f.input :title, label: false, required: false, input_html: {class: "form-control w-100", name: "title", value: params[:title]} %>
            <input class="form-control" name="title" value="<%= params[:title] %>">
            <label for="submit" class="input-group-text btn btn-primary" id="basic-addon1">
              <svg width="16" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="search" class="svg-inline--fa fa-search fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"></path></svg>
            </label>
          </div>
        </div>
        <div class="col-sm-3">
          <%= link_to 'Nova Anotação', new_note_path, remote: true, class: %w[btn btn-primary text-white fw-bold] %>
        </div>
        <div class="col-sm-3 text-end">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: %w[btn btn-danger text-white fw-bold] %>
        </div>
      </div>
    </div>
  </div>
<% end %>


<div class="row">
  <% @notes.each do |note| %>
    <div class="col-sm-3 mb-4">
      <%= render 'card', note: note %>
    </div>
  <% end %>
</div>