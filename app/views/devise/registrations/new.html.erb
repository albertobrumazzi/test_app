<div class="row justify-content-sm-center">
  <div class="col-sm-3 mt-5 pt-5">
    <h2 class="text-center">Registrar usu√°rio!</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control mb-3" }%>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-control mb-3" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password",class: "form-control" } %>
      </div>
  <div class="row mt-4">
    <%= render "devise/shared/links" %>
    <div class="col-sm-6">
      <%= f.button :submit, "Registrar", class: "btn btn-primary w-100 fw-bold text-white" %>
    </div>
  </div>
<% end %>

