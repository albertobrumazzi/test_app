<div class="row justify-content-sm-center">
  <div class="col-sm-3 mt-5 pt-5">
    <h2 class="text-center">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control mb-4"} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control"} %>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>        
      </div>
      <div class="row mt-4">
        <%= render "devise/shared/links" %>
        <div class="col-sm-6">
          <%= f.button :submit, "Log in", class: "btn btn-primary w-100 text-white fw-bold" %>
        </div>
      </div>
    <% end %>
  </div>
</div>